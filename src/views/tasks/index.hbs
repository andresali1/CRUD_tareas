<div class="max-w-7x1 mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-x1 sm:rounded-lg mt-12">

        <table class="table-fixed w-full">
            <thead>
                <tr class="bg-green-500 text-white">
                    <th class="w-20 py-4 ...">ID</th>
                    <th class="w-1/4 py-4 ...">Titulo</th>
                    <th class="w-1/2 py-4 ...">Descripci√≥n</th>
                    <th class="w-28 py-4 ...">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each tasks}}
                <tr>
                    <td class="py-3 px-6">{{id}}</td>
                    <td class="p-3 text-center">{{title}}</td>
                    <td class="p-3 text-center">{{description}}</td>
